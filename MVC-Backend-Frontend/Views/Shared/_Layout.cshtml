
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - COMP_4956_Projects</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/interactions.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC-Backend-Frontend.styles.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/Pages/Shared/_Layout.cshtml.css" asp-append-version="true" /> *@
</head>

<body>
    <header>
        @* -------------------------- Beginning of Top Nav Bar ------------------------ *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg- border-bottom box-shadow mb-3">
            <div class="container">
                <div class="ProjectName">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">

                        @* CodeCraft Project Logo *@
                        <span class="logo"></span>
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @* File Dropdown menu: New Project, Save, Open *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                File
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">New Project</a></li>
                                <li><a id= "saveProjectButton" class="dropdown-item" href="#">Save</a></li>
                                <li><a id="openProjectButton" class="dropdown-item" href="#">Open</a></li>
                            </ul>
                        </li>

                        @* Other Top Nav Bar Links: Home, Help, Privacy, testing *@
                        <li class="nav-item code">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Interactions">Code</a>
                        </li>
                        @* <li class="nav-item help">

                            <a class="nav-link text-dark" asp-area="" asp-page="/Help">Help</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/testing">testing</a>
                        </li>*@
                        <li class="nav-item tutorial"> 
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Tutorial">Tutorial</a>
                        </li>


                        @* <partial style="align-self:flex-end" name="_LoginPartial"/> *@

                     <li class="nav-item ml-auto">
                       <div class="login-partial">
                       <partial name="_LoginPartial"/>
                       </div>
                    </li>

                    @* Logout Button in text form *@
                          @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="Logout"><strong>LOGOUT</strong></a>
                        </li> *@
            
                           @* Logout Button in button form *@
@*                        <li class="nav-item logout">
                          <a class="nav-link text-dark btn btn-info" asp-area="" asp-controller="Home" asp-action="Logout"><strong>LOG OUT</strong></a>
                        </li> *@
                    </ul>
                </div>
            </div>
        </nav>
        @* -------------------------- End of Top Nav Bar ------------------------ *@
    </header>
    <div class="container-fluid body-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - COMP_4956_Projects - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/wwwroot/js/kodeFiles.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>